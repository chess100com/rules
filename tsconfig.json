{
    "compilerOptions": {
        "outDir": "build",
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}